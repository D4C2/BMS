<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p1">

    <TextView
        android:id="@+id/txt_commentBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/android:list"
        android:layout_below="@+id/txt_commentBook"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="580dp">
    </ListView>

    <Button
        android:id="@+id/bt_comment"
        android:layout_below="@+id/android:list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_menu_start_conversation"
        android:drawableLeft="@drawable/ic_menu_start_conversation"
        android:drawablePadding="2dp"
        android:background="#00000000"
        android:text="@string/bt_comment"
        android:textColor="#ff00ff"/>

    <TextView
        android:id="@+id/comment_err"
        android:layout_below="@+id/bt_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_commentErr"
        android:textColor="#ff0000"
        android:visibility="invisible"/>
</RelativeLayout>