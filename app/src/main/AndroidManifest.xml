<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qhylc.android.bms">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.qhylc.android.bms.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_l"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingActivity"/>
        <activity android:name=".CommentActivity"/>
        <activity android:name=".MyBookActivity"/>
        <activity android:name=".QueryActivity"/>
        <activity android:name=".LoanActivity"/>
        <activity android:name=".ReturnBookActivity"/>
    </application>

</manifest>